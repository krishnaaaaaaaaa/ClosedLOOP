    <!-- One -->
      <section id="one" class="wrapper style2">
        <div class="inner">
          <div class="box">
            <div class="image fit">
              <img src="images/pic01.jpg" alt="" />
            </div>
            <div class="content">
              <% if(data.foundrating==true){%>
              <div class="inner">
	              <header class="align-center">
	              	<h2><%=data.district%>'s rating is <%=data.rating%>/5 </h2>
	              	<div class="star-ratings-sprite"><span style="<%=data.string%>" class="star-ratings-sprite-rating"></span></div>
	              	<script type="text/javascript">
	              		document.querySelector(`.${rating} .stars-inner`).style.width = starPercentageRounded; 
	              	</script>
  					<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script><br>
	              	<h2>Number of ratings is <%=data.noofratings%> </h2>
	              </header><br>
	              <%=data.reviews%>

              </div>
              <%}%>
              <hr />

              <header class="align-center">
                <h2>Please Provide Details</h2>
                </header>
              <hr />

              <form name="ratingsform" method="post" action="#" class="align-center">
                    <div class="row uniform">
                      <div class="12u$">
                          <div class="select-wrapper">
                          <select name="states" id="states"  onchange="updatestates(this.selectedIndex);" required>
                          <option selected="Select a state">-Select a state-</option>
                          <option value="Arunachal Pradesh">Arunachal Pradesh</option>
                          <option value="Andhra Pradesh">Andhra Pradesh</option>
                          <option value="Kolkata">Kolkata</option>
                          <option value="Maharasta">Maharasta</option>
                          <option value="Odisha">Odisha</option>
                          </select>
                          <select name="districts"  onclick="//alert(this.options[this.options.selectedIndex])" required>
						              </select>
                        </div>
                      </div>
                      <div class="3u$">
                        <ul class="actions">
                          <li><input type="submit" value="Submit" /></li>
                          <li><input type="reset" value="Reset" class="alt" /></li><br>
                                                  
                        </ul>
                      </div>
                    </div>


                    

              </form>
              <script type="text/javascript">
 
                    var stateslist=document.ratingsform.states;
                    var districtslist=document.ratingsform.districts;
                    
                     
                    var districts=new Array();
                    districts[0]="";
                    districts[1]=["Arunchal", "pradesh"];
                    districts[2]=["Andhra", "pradesh","telengana"];
                    districts[3]=["Kolkata"];
                    districts[4]=["Mumbai", "Pune"];
                    districts[5]=["Puri", "Cuttack","Bhubaneswar","jagatsinghpur","Sambalpur","barampur"];


                    function updatestates(selectedstategroup){
                        
                        districtslist.options.length=0;
                        if (selectedstategroup>0){
                            for (i=0; i<districts[selectedstategroup].length; i++)
                                districtslist.options[districtslist.options.length]=new Option(districts[selectedstategroup][i]);
                        }
                    }
             
                    </script>

                    



            </div>
          </div>
        </div>
      </section>

